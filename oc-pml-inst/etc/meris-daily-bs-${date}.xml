<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<wps:Execute service="WPS"
             version="1.0.0"
             xmlns:wps="http://www.opengis.net/wps/1.0.0"
             xmlns:ows="http://www.opengis.net/ows/1.1"
             xmlns:xlink="http://www.w3.org/1999/xlink">

    <ows:Identifier>Cell</ows:Identifier>

    <wps:DataInputs>
        <wps:Input>
            <ows:Identifier>productionName</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>OC-meris-daily-bs-${date}</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>processorBundleName</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>oc-cci</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>processorBundleVersion</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>0.9</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>calvalus.output.dir</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>/calvalus/projects/oc-pml/meris/daily-bs/${year}/${month}/${date}</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>inputPath</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>/calvalus/projects/oc-pml/meris/daily/${year}/${month}/${date}-L3-1</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>calvalus.cell.parameters</ows:Identifier>
            <wps:Data>
                <wps:ComplexData>
                    <parameters>
                        <postProcessor>
                            <type>BandShifting</type>
                            <sensorName>MERIS</sensorName>
                            <!--MERIS (413. , 443. , 490. , 510. , 560. , 665.) IOP (aph, acdm, bbp)-->
                            <bandNames>Rrs412_mean,Rrs443_mean,Rrs490_mean,Rrs510_mean,Rrs560_mean,Rrs665_mean,a_pig_413_mean,a_ys_413_mean,bb_spm_413_mean</bandNames>
                            <outputCenterWavelengths>412,443,490,510,555,667</outputCenterWavelengths>
                        </postProcessor>
                    </parameters>
                </wps:ComplexData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>outputFormat</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>NetCDF4-BEAM</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
          <ows:Identifier>calvalus.output.prefix</ows:Identifier>
          <wps:Data>
            <wps:LiteralData>OC-meris-daily-bs</wps:LiteralData>
          </wps:Data>
        </wps:Input>
    </wps:DataInputs>
</wps:Execute>

