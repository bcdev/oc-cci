<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<wps:Execute service="WPS"
             version="1.0.0"
             xmlns:wps="http://www.opengis.net/wps/1.0.0"
             xmlns:ows="http://www.opengis.net/ows/1.1"
             xmlns:xlink="http://www.w3.org/1999/xlink">

    <ows:Identifier>L3</ows:Identifier>

    <wps:DataInputs>
        <wps:Input>
            <ows:Identifier>productionName</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>OC-meris-daily-${date}</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>processorBundleName</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>oc-cci</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>processorBundleVersion</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>0.1</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>processorName</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>meris-daily-useIdepix-QAA</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>calvalus.output.dir</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>/calvalus/projects/oc-pml/meris-daily/${year}/${month}/${date}</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>inputPath</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>/calvalus/projects/oc-pml/polymer/${year}/${month}/MER_..._1.*${yyyy}${MM}${dd}.*.polymer.nc$</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>minDate</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>${date}</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>maxDate</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>${date}</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>periodLength</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>1</wps:LiteralData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>processorParameters</ows:Identifier>
            <wps:Data>
                <wps:ComplexData>
                    <parameters>
                        <idepixDir>/calvalus/projects/oc/Idepix-RR-fullmission/${year}/${month}</idepixDir>
                    </parameters>
                </wps:ComplexData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>calvalus.l3.parameters</ows:Identifier>
            <wps:Data>
                <wps:ComplexData>
                    <parameters>
                        <numRows>4320</numRows>
                        <maskExpr>not(l1_flags.INVALID or cloud_classif_flags.F_CLOUD or cloud_classif_flags.F_LAND) and ( (bitmask &amp; 31) == 0 ) and (Rw412 &lt;= 0.12)</maskExpr>
                        <variables>
                            <variable>
                                <name>Rrs412</name>
                                <expr>Rw412/PI</expr>
                            </variable>
                            <variable>
                                <name>Rrs443</name>
                                <expr>Rw443/PI</expr>
                            </variable>
                            <variable>
                                <name>Rrs490</name>
                                <expr>Rw490/PI</expr>
                            </variable>
                            <variable>
                                <name>Rrs510</name>
                                <expr>Rw510/PI</expr>
                            </variable>
                            <variable>
                                <name>Rrs560</name>
                                <expr>Rw560/PI</expr>
                            </variable>
                            <variable>
                                <name>Rrs620</name>
                                <expr>Rw620/PI</expr>
                            </variable>
                            <variable>
                                <name>Rrs665</name>
                                <expr>Rw665/PI</expr>
                            </variable>
                        </variables>
                        <aggregators>
                            <aggregator>
                                <type>AVG</type>
                                <varName>Rrs412</varName>
                            </aggregator>
                            <aggregator>
                                <type>AVG</type>
                                <varName>Rrs443</varName>
                            </aggregator>
                            <aggregator>
                                <type>AVG</type>
                                <varName>Rrs490</varName>
                            </aggregator>
                            <aggregator>
                                <type>AVG</type>
                                <varName>Rrs510</varName>
                            </aggregator>
                            <aggregator>
                                <type>AVG</type>
                                <varName>Rrs560</varName>
                            </aggregator>
                            <aggregator>
                                <type>AVG</type>
                                <varName>Rrs620</varName>
                            </aggregator>
                            <aggregator>
                                <type>AVG</type>
                                <varName>Rrs665</varName>
                            </aggregator>
                            <aggregator>
                                <type>AVG</type>
                                <varName>a_pig_413</varName>
                            </aggregator>
                            <aggregator>
                                <type>AVG</type>
                                <varName>a_ys_413</varName>
                            </aggregator>
                            <aggregator>
                                <type>AVG</type>
                                <varName>bb_spm_413</varName>
                            </aggregator>
                        </aggregators>
                        <!--TODO use BandShifting + BiasCorrection Processor-->
                        <postProcessor>
                            <type>Selection</type>
                            <varNames>Rrs412_mean,Rrs560_mean,Rrs665_mean</varNames>
                        </postProcessor>
                    </parameters>
                </wps:ComplexData>
            </wps:Data>
        </wps:Input>

        <wps:Input>
            <ows:Identifier>outputFormat</ows:Identifier>
            <wps:Data>
                <wps:LiteralData>NetCDF4-BEAM</wps:LiteralData>
            </wps:Data>
        </wps:Input>
        <wps:Input>
            <ows:Identifier>calvalus.ql.parameters</ows:Identifier>
            <wps:Data>
                <wps:ComplexData>
                    <parameters>
                        <quicklooks>
                            <config>
                                <RGBAExpressions>Rrs665_mean,Rrs560_mean,Rrs412_mean,</RGBAExpressions>
                                <imageType>jpeg</imageType>
                            </config>
                        </quicklooks>
                    </parameters>
                </wps:ComplexData>
            </wps:Data>
        </wps:Input>

    </wps:DataInputs>
</wps:Execute>

