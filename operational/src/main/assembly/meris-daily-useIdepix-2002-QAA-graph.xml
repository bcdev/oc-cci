#set( $filelength = $inputPath.name.length() - 11 )
#set( $filename = $inputPath.name.substring(0, $filelength) )
<graph id="g">
    <version>1.0</version>

    <header>
      <target refid="polymerPlusIdepixPlusQaa" />
      <source name="polymer">${inputPath}</source>
      <source name="idepix">$parameters.getProperty("idepixDir")/L2_of_${filename}.seq</source>
    </header>

    <node id="sunZenithTiepointToBandNode">
        <operator>BandMaths</operator>
        <sources>
            <sourceProducts>idepix</sourceProducts>
        </sources>
        <parameters>
            <targetBands>
                <targetBand>
                    <name>sun_zenith_band</name>
                    <expression>sun_zenith</expression>
                    <type>float32</type>
                </targetBand>
            </targetBands>
        </parameters>
    </node>

    <node id="polymerPlusIdepix">
        <operator>Merge</operator>
        <sources>
            <masterProduct>polymer</masterProduct>
            <sourceProducts>idepix,sunZenithTiepointToBandNode</sourceProducts>
        </sources>

        <parameters>
            <includes>
                <include>
                    <productId>sourceProducts0</productId>
                    <name>l1_flags</name>
                </include>
                <include>
                    <productId>sourceProducts0</productId>
                    <name>cloud_classif_flags</name>
                </include>
                <include>
                    <productId>sourceProducts1</productId>
                    <name>sun_zenith_band</name>
                </include>
            </includes>
            <geographicError>0.01</geographicError>
        </parameters>
    </node>

    <node id="qaa">
        <operator>OC-CCI.QaaIOP</operator>
        <sources>
            <source>polymerPlusIdepix</source>
        </sources>

        <parameters>
            <reflectanceBandNames>Rw412,Rw443,Rw490,Rw510,Rw560,Rw620</reflectanceBandNames>
            <sensorName>MERIS</sensorName>
            <validPixelExpression>not(l1_flags.INVALID or cloud_classif_flags.F_LAND or cloud_classif_flags.F_SNOW_ICE) and ( (bitmask &amp; 31) == 0 ) and (Rw412 &lt;= 0.12) and (sun_zenith_band &lt;= 80.0)</validPixelExpression>
            <divideByPI>true</divideByPI>
        </parameters>
    </node>

    <node id="polymerPlusIdepixPlusQaa">
        <operator>Merge</operator>
        <sources>
            <masterProduct>polymerPlusIdepix</masterProduct>
            <sourceProducts>qaa</sourceProducts>
        </sources>

        <parameters>
            <includes>
                <include>
                    <productId>sourceProducts0</productId>
                    <name>a_pig_443</name>
                </include>
                <include>
                    <productId>sourceProducts0</productId>
                    <name>a_ys_443</name>
                </include>
                <include>
                    <productId>sourceProducts0</productId>
                    <name>bb_spm_443</name>
                </include>
            </includes>
            <geographicError>0.01</geographicError>
        </parameters>
    </node>
</graph>